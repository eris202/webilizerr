include ../alert/_alert

.panel
	.panel-header
		h4.panel-title
			span.panel-icon.fa-bell
			span Notifications
	.panel-body.p-2.scroller.scroller-vertical
		.group-5
			+alert({ close: true }).alert-primary.alert-darker.alert-sm
				span.alert-icon.fa-telegram
				span Message
			+alert({ close: true }).alert-secondary.alert-sm
				span.alert-icon.fa-warning
				span Warning
			+alert({ close: true }).alert-danger.alert-sm
				span.alert-icon.fa-remove
				span Error
			+alert({ close: true }).alert-success.alert-sm
				span.alert-icon.fa-thumbs-up
				span Success
	.panel-footer.p-2
		a.btn.btn-primary.btn-sm( href='alerts.html' ) See more
