<hr class="section-line">
<div class="item py-3" id="{{this.key}}">
    <div class="item-header">
        <div class="item-title">
            <div class="title-sign">
                <div class="sign item-num {{this.passedClass}}">
                    <p>{{this.circleTextDisplay}}</p>
                </div>
                <div class="title">
                    <h3>{{this.friendlyName}}</h3>
                </div>
            </div>
            <div>
                <li class="mx-2 question" data-title="Title Tag" data-info="
                HTML title tags appear in browser tabs, bookmarks and in search results. Since they are one of the most important on-page SEO elements you should make your title tags between 20 and 70 
                characters including spaces (200 - 569 pixels). Make sure each page has a unique title and use your most important keywords. 
                For internal pages start your title tags with your most important keyword(s).
                "><a class="hov-c-b d-i-b">
                        What is this?</a></li>
                <div class="item-section">{{this.section}}</div>
                {{!-- <img data-title="Title Here" data-info="Info Here" class="question" src="img/info.png" alt="Info"> --}}
            </div>
        </div>
    </div>
    <div class="item-body myt-2">
        {{#if this.passed}}
        <div class="box-wrapper">
            {{#if this.shortAnswer}}
            <div class="answer">
                <div style="margin-top: 20px;">
                    <p>
                        {{this.shortAnswer}}
                    </p>
                </div>
            </div>
            {{/if}}

            {{#if this.data}}

            <div class="answer">
                <div style="margin-top: 20px;">
                    Page Title: <br> {{this.data}}. With Length of <b>{{this.value}}</b> character.
                </div>
            </div>
            {{/if}}
        </div>
        {{else}}

        {{#if this.shortAnswer}}
        <div class="box-wrapper">
            <div class="answer">
                <div style="margin-top: 20px;">
                    <p>
                        {{this.shortAnswer}}
                    </p>
                </div>
            </div>
        </div>
        {{/if}}

        {{#if this.data}}
        <div class="box-wrapper">

            <div class="info">
                <div><img src="img/info2.png" alt="data"></div>
                <div>
                    <p>
                        Page Title is <b>{{this.data}}</b> with Length of <b>{{this.value}}</b> character.
                    </p>
                </div>
            </div>
        </div>
        {{/if}}


        {{/if}}

        {{#if this.recommendation}}
        <div class="box-wrapper">
            <div class="info">
                <div><img src="img/info2.png" alt="recommendation"></div>
                <div>
                    <p>
                        Recommendation: <br> {{this.recommendation}}
                    </p>
                </div>
            </div>
        </div>
        {{/if}}

    </div>
</div>