<hr class="section-line">
<div class="item py-3" id="{{this.key}}">
    <div class="item-header">
        <div class="item-num {{this.passedClass}}">
            <p>{{this.circleTextDisplay}}</p>
        </div>
        <div class="item-title">
            <h3>Twitter Activity</h3>
            <div>
                <div class="item-section">Social</div>
                <img data-title="Title Here" data-info="Info Here" class="question" src="img/info.png"
                    alt="Info">
            </div>
        </div>
    </div>
    <div class="item-body myt-2">
        <div class="box-wrapper">
            <div class="answer">
                <div><img src="img/success.png" alt="Check"></div>
                <div>
                    <p>{{this.shortAnswer}}</p>
                </div>
            </div>
        </div>
        <div class="box-wrapper">
            <div class="info">
                <div><img src="img/info2.png" alt="info"></div>
                <div>
                    <p>Followers: {{this.data.followers}}</p>
                </div>
            </div>
        </div>
    </div>
</div>