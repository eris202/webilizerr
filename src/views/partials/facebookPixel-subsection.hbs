<hr class="section-line">
<div class="item py-3" id="{{this.key}}">
    <div class="item-header">
        <div class="item-title">
            <div class="title-sign">
                <div class="sign item-num {{this.passedClass}}">
                    <p>{{this.circleTextDisplay}}</p>
                </div>
                <div class="title">
                    <h3>{{this.friendlyName}}</h3>
                </div>
            </div>
            <div>
                <li class="mx-2 question" data-title="Facebook Pixel"
                    data-info="The Facebook pixel is a short piece of code that businesses can add to their website to track their Facebook ad campaigns. The pixel measures ad conversions, website traffic, and monitors audiences.

The Facebook pixel also helps you to create custom audiences for your Facebook ads, allowing you to target certain demographics and retarget customers or visitors to your website.">
                    <a class="hov-c-b d-i-b">
                        What is this?</a></li>
                <div class="item-section">{{this.section}}</div>
                {{!-- <img data-title="Title Here" data-info="Info Here" class="question" src="img/info.png" alt="Info"> --}}
            </div>
        </div>
    </div>
    <div class="item-body myt-2">
        <div class="box-wrapper">
            {{#if this.shortAnswer}}
            <div class="answer">
                <div style="margin-top: 20px;">
                    <p>
                        {{this.shortAnswer}}
                    </p>
                </div>
            </div>
            {{/if}}

            {{#if this.data}}
            <div class="info">
                <div><img src="img/info2.png" alt="data"></div>
                <div>
                    Facebook Pixel: <br> <b>{{this.data}}</b>
                </div>
            </div>
            {{/if}}
        </div>



        {{#if this.recommendation}}
        <div class="box-wrapper">
            <div class="info">
                <div><img src="img/info2.png" alt="recommendation"></div>
                <div>
                    <p>
                        Recommendation: <br> {{this.recommendation}}
                    </p>
                </div>
            </div>
        </div>
        {{/if}}

    </div>
</div>