<hr class="section-line">
<div class="item py-3" id="{{this.key}}">
    <div class="item-header">
        <div class="item-num {{this.passedClass}}">
            <p>{{this.circleTextDisplay}}</p>
        </div>
        <div class="item-title">
            <h3>{{this.friendlyName}}</h3>
            <div>
                <div class="item-section">{{this.section}}</div>
                {{!-- <img data-title="Title Here" data-info="Info Here" class="question" src="img/info.png" alt="Info"> --}}
            </div>
        </div>
    </div>
    <div class="item-body myt-2">
        <div class="box-wrapper">
            <div class="info">
                <div><img src="img/info2.png" alt="Check"></div>
                <div>
                    <p>
                        We found {{#numeric this.data.total}}{{/numeric}} total links.
                        {{#numeric this.data.externalPercentage}}{{/numeric}}% of your links are
                        external links and are sending authority to other sites.
                        {{#numeric this.data.noFollowPercentage}}{{/numeric}}% of your links are nofollow
                        links, meaning authority is not being passed to those destination pages.
                    </p>
                </div>
            </div>

            {{#if this.recommendation}}
            <div class="box-wrapper">
                <div class="danger">
                    <div><img style="height: 50px;" src="img/info3.png" alt="recommendation"></div>
                    <div style="margin-top: 20px;">
                        <p>
                            Recommendation: <br> {{this.recommendation}}
                        </p>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>