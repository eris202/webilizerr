<hr class="section-line">
<div class="item py-3" id="{{this.key}}">
    <div class="item-header">
        <div class="item-title">
            <div class="title-sign">
                <div class="sign item-num {{this.passedClass}}">
                    <p>{{this.circleTextDisplay}}</p>
                </div>
                <div class="title">
                    <h3>{{this.friendlyName}}</h3>
                </div>
            </div>
            <div>
                <li class="mx-2 question" data-title="Robot.txt"
                    data-info="A robots.txt file allows you to restrict the access of search engine crawlers to prevent them from accessing specific pages or directories. They also point the web crawler to your pageâ€™s XML sitemap file.

You can use Google Search Console's Robots.txt Tester to submit and test your robots.txt file and to make sure Googlebot isn't crawling any restricted files."><a
                        class="hov-c-b d-i-b">
                        What is this?</a></li>
                <div class="item-section">{{this.section}}</div>
                {{!-- <img data-title="Title Here" data-info="Info Here" class="question" src="img/info.png" alt="Info"> --}}
            </div>
        </div>
    </div>
    <div class="item-body myt-2">
        <div class="box-wrapper">
            {{#if this.shortAnswer}}
            <div class="answer">
                <div style="margin-top: 20px;">
                    <p>
                        {{this.shortAnswer}}
                    </p>
                </div>
            </div>
            {{/if}}
            {{#if this.value}}
            <div class="answer">
                <div style="margin-top: 20px;">
                    <p>
                        Value: <br> {{this.value}}
                    </p>
                </div>
            </div>
            {{/if}}
        </div>

        {{#if this.recommendation}}
        <div class="box-wrapper">
            <div class="info">
                <div><img src="img/info2.png" alt="recommendation"></div>
                <div>
                    <p>
                        Recommendation: <br> {{this.recommendation}}
                    </p>
                </div>
            </div>
        </div>
        {{/if}}


        {{#if this.data}}
        {{#ifObject this.data}}


        {{else}}
        <div class="answer">
            <div>
                URL: {{this.data}}
            </div>
        </div>
        {{/ifObject}}
        {{/if}}

        {{#if this.data}}
        {{#each this.data}}
        {{#ifArray this}}
        {{> table-subsection this}}
        {{/ifArray}}
        {{#ifObject this}}
        {{> table-subsection this}}
        {{/ifObject}}
        {{/each}}
        {{/if}}
    </div>
</div>