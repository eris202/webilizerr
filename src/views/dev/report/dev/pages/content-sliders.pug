extends ../components/base/_skeleton
include ../components/rd-navbar/_rd-navbar
include ../components/breadcrumbs/_breadcrumbs

block variables
	- pageName = 'Content Sliders';

block page
	header.section.page-header
		+rd-navbar

	section.topbar
		+breadcrumbs( breadcrumbs )

	section.bg-white.section-sm
		.container
			.row.align-items-lg-center
				.col-lg-5
					h3 Slick.js
					ul.list-unstyled.mt-2
						li
							span.fa-info-circle.pr-2
							b Author:
							span  Ken Wheeler.
						li
							span.fa-info-circle.pr-2
							b License:
							span  The MIT License (MIT).
						li
							span.fa-info-circle.pr-2
							b Website:
							a( href='https://kenwheeler.github.io/slick/', target='_blank' )  https://kenwheeler.github.io/slick/
					.mt-3: button.btn.btn-sm.btn-sidebar.btn-info( data-multi-switch!={
						targets: '.mobile-sidebar',
						isolate: '.mobile-sidebar [data-class-switcher]',
						scope: '.mobile-sidebar, .btn-sidebar'
					} ) Slick Features
				.col-lg-7.mobile-sidebar.bg-white
					.section-sm
						h4 Basic Sliders
						.group-5.mt-1
							button.btn.btn-sm.btn-info.active( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-1',
								targetClass: 'd-block'
							} ) 1. Single Item
							button.btn.btn-sm.btn-info( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-2'
							} ) 2. Multiple Items
							button.btn.btn-sm.btn-info( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-3'
							} ) 3. Right To Left

						h4 Advanced Sliders 
						.group-5.mt-1 
							button.btn.btn-sm.btn-info( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-4'
							} ) 1. Center Mode
							button.btn.btn-sm.btn-info( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-5'
							} ) 2. Dynamic
							button.btn.btn-sm.btn-info( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-6'
							} ) 3. Filtering
							button.btn.btn-sm.btn-info( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-7'
							} ) 4. Synced Sliders

						h4 Slider Options
						.group-5.mt-1
							button.btn.btn-sm.btn-info( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-8'
							} ) 1. Set Width
							button.btn.btn-sm.btn-info( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-9'
							} ) 2. Adaptive Height
							button.btn.btn-sm.btn-info( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-10'
							} ) 3. Autoplay
							button.btn.btn-sm.btn-info( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-11'
							} ) 4. Lazy Loading
							button.btn.btn-sm.btn-info( data-class-switcher!={
								group: '.slick-samples',
								target: '.sample-12'
							} ) 5. Fade Effect

	section.section-lg
		.container.slick-samples
			h2.text-center Slick Slider
			.row.row-50.justify-content-center
				.col-md-11.col-xxl-12.sample-1.d-none.d-block
					h4.text-center Single Item Slider
					.slick-slider.slick-demo( data-slick!={dots: true, arrows: true}, data-slick-sm!={arrows: false} )
						div: .slide-content: h1 1
						div: .slide-content: h1 2
						div: .slide-content: h1 3
						div: .slide-content: h1 4
						div: .slide-content: h1 5
						div: .slide-content: h1 6
						div: .slide-content: h1 7
						div: .slide-content: h1 8
						div: .slide-content: h1 9

				.col-md-11.col-xxl-12.sample-2.d-none
					h4.text-center Multi Item Slider
					.slick-slider.slick-demo( data-slick!={
						dots: true,
						slidesToScroll: 3,
						slidesToShow: 3
					},
					data-slick-sm!={
						arrows:         false,
						slidesToShow:   1,
						slidesToScroll: 1
					} )
						div: .slide-content: h1 1
						div: .slide-content: h1 2
						div: .slide-content: h1 3
						div: .slide-content: h1 4
						div: .slide-content: h1 5
						div: .slide-content: h1 6
						div: .slide-content: h1 7
						div: .slide-content: h1 8
						div: .slide-content: h1 9

				.col-md-11.col-xxl-12.sample-3.d-none
					h4.text-center Right to Left Support
					.slick-slider.slick-demo( data-slick!={dots: true, rtl: true}, data-slick-sm!={arrows: false}, dir='rtl' )
						div: .slide-content: h1 1
						div: .slide-content: h1 2
						div: .slide-content: h1 3
						div: .slide-content: h1 4

				.col-md-11.col-xxl-12.sample-4.d-none
					h4.text-center Center Mode
					.slick-slider.slick-demo( data-slick!={
						dots: true,
						centerMode: true,
						centerPadding: '60px',
						slidesToShow: 3
					},
					data-slick-sm!={
						arrows:         false,
						slidesToShow:   1,
						slidesToScroll: 1
					} )
						div: .slide-content: h1 1
						div: .slide-content: h1 2
						div: .slide-content: h1 3
						div: .slide-content: h1 4
						div: .slide-content: h1 5
						div: .slide-content: h1 6
						div: .slide-content: h1 7
						div: .slide-content: h1 8

				.col-md-11.col-xxl-12.sample-5.d-none
					h4.text-center Add & Remove
					.text-center.mt-2
						.group-5
							button.btn.btn-sm.btn-primary.add-slide( data-target-slick='#dynamic-slick' ) Add Slide
							button.btn.btn-sm.btn-primary.remove-slide( data-target-slick='#dynamic-slick' ) Remove Slide
					#dynamic-slick.slick-slider.slick-demo( data-slick!={
						dots: true,
						slidesToShow: 3,
						slidesToScroll: 3
					},
					data-slick-sm!={
						arrows: false,
						slidesToShow: 1,
						slidesToScroll: 1
					} )
						div: .slide-content: h1 1

				.col-md-11.col-xxl-12.sample-6.d-none
					h4.text-center Filtering
					button.btn.btn-sm.btn-primary.filter-slide( data-target-slick='#filtered-slick' ) Filter Slides
					#filtered-slick.slick-slider.slick-demo.slick-filter( data-slick!={
						dots: true,
						slidesToShow: 4,
						slidesToScroll: 4
					},
					data-slick-sm!={
						arrows:         false,
						slidesToShow:   2,
						slidesToScroll: 2
					} )
						div: .slide-content: h1 1
						div: .slide-content: h1 2
						div: .slide-content: h1 3
						div: .slide-content: h1 4
						div: .slide-content: h1 5
						div: .slide-content: h1 6
						div: .slide-content: h1 7
						div: .slide-content: h1 8

				.col-md-11.col-xxl-12.sample-7.d-none
					h4.text-center Slider Syncing
					.slick-slider.slick-demo.slider-for( data-slick!={
						slidesToShow: 1,
						slidesToScroll: 1,
						arrows: false,
						fade: true,
						asNavFor: '.slider-nav'
					}, data-slick-sm!={arrows: false} )
						div: .slide-content: h1 1
						div: .slide-content: h1 2
						div: .slide-content: h1 3
						div: .slide-content: h1 4
						div: .slide-content: h1 5
						div: .slide-content: h1 6
					.slick-slider.slick-demo.slider-nav( data-slick!={
						slidesToShow: 3,
						slidesToScroll: 3,
						asNavFor: '.slider-for',
						dots: true,
						centerMode: true,
						focusOnSelect: true
					},
					data-slick-sm!={
						arrows:         false,
						slidesToShow:   1,
						slidesToScroll: 1
					} )
						div: .slide-content: h1 1
						div: .slide-content: h1 2
						div: .slide-content: h1 3
						div: .slide-content: h1 4
						div: .slide-content: h1 5
						div: .slide-content: h1 6

				.col-md-11.col-xxl-12.sample-8.d-none
					h4.text-center Variable Width
					.slick-slider.slick-demo( data-slick!={
						dots: true,
						slidesToShow: 1,
						centerMode: true,
						variableWidth: true
					},
					data-slick-sm!={
						arrows:         false,
						slidesToShow:   1,
						slidesToScroll: 1
					} )
						div: .slide-content( style='min-width: 150px;' ): h1 150
