			.panel.panel-nav
				.panel-header.d-flex.flex-wrap.align-items-center.justify-content-between
					h4.panel-title Add New Product
					ul.nav.nav-tabs.scroller.scroller-horizontal( role='tablist' )
						li.nav-item: a.nav-link.active( data-toggle='tab', href='#panelTab1', role='tab', aria-controls='panelTab1', aria-selected='true' ) General
						li.nav-item: a.nav-link( data-toggle='tab', href='#panelTab2', role='tab', aria-controls='panelTab2', aria-selected='false' ) Description
				.panel-body
					form( method='post' )
						.tab-content
							#panelTab1.tab-pane.fade.show.active( role='tabpanel' )
								.row.row-15
									.col-md-4.col-xl-3
										.tower-file
											input#demo1.tower-file-input( type='file', multiple )
											.group-10
												label.btn.btn-primary( for='demo1' )
													span.mdi-upload
													span Select Files
												button.tower-file-clear.btn.btn-secondary.align-top( type='button' ) Clear
									.col-md-8.col-xl-9
										.input-group.form-group
											.input-group-prepend
												label.input-group-text( for='basic-addon1' )
													span.fa-tag
											input#basic-addon1.form-control( type='text', placeholder='Product Title' )
										.form-group
											textarea#standardTextarea.form-control( rows='5', placeholder='Product Descripion' )
							#panelTab2.tab-pane.fade( role='tabpanel' )
								.row.row-30
									.col-md-6
										select.form-control( name='product-category' )
											option( selected='selected' ) Product Category...
											option Software
											option Computers
											option Gadgets
											option Clothing
									.col-md-6
										select.form-control( name='product-status' )
											option( selected='selected' ) Product Availability
											option Software
											option Computers
											option Gadgets
											option Clothing
									.col-lg-4
										.input-group
											.input-group-prepend
												label.input-group-text( for='basic-addon2' )
													span.fa-usd
											input#basic-addon2.form-control( type='text', placeholder='Product Price...' )
									.col-lg-4
										.input-group
											.input-group-prepend
												label.input-group-text( for='basic-addon3' )
													span.fa-shopping-cart
											input#basic-addon3.form-control( type='text', placeholder='Vendor Source...' )
									.col-lg-4
										.input-group
											.input-group-prepend
												label.input-group-text( for='basic-addon4' )
													span.fa-barcode
											input#basic-addon4.form-control( type='text', placeholder='Product SKU...' )
									.col-12
										.tag-manager
											input.form-control.tag-manager-input( type='text', placeholder='Create a new tag...' )
											.tag-manager-container
									.col-12
										hr.m-0
									.col-sm-8
										+checkbox( {
											id: 'successCheck'
										} ) Save Customer - #[span.font-italic A Random Unique ID will be generated]
									.col-sm-4.text-right
										button.btn.btn-primary( type='submit' ) Save Order

			.panel
				.panel-header
					.row.row-30
						.col-lg-5
							select.form-control( name='filter-category' )
								option( selected='selected' ) Filter by Category
